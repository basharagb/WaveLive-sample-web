{
  "public": ".",
  "rewrites": [
    {
      "source": "**",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        {
          "key": "Content-Type", 
          "value": "text/css; charset=utf-8"
        }
      ]
    }
  ],
  "directoryListing": false,
  "trailingSlash": false
}
